{
  "name": "aipply-crawler-api",
  "version": "1.0.0",
  "description": "AIpply Web Crawler API powered by Exa for discovering development opportunities",
  "main": "src/server.js",
  "scripts": {
    "start": "node scripts/start-production.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "echo 'No linter configured'",
    "lint:fix": "echo 'No linter configured'",
    "db:migrate": "node src/database/migrate.js",
    "db:setup": "node scripts/setup-database.js",
    "db:test-passwords": "node scripts/test-passwords.js",
    "setup": "node scripts/setup.js",
    "test:exa": "node scripts/test-exa.js",
    "postinstall": "echo 'Post-install complete'",
    "deploy": "npm run db:migrate && npm start",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "logs": "echo 'Use Railway dashboard or PM2 logs'",
    "clean": "rm -rf logs/*.log",
    "docker:build": "docker build -t aipply-crawler-api .",
    "docker:run": "docker run -p 3000:3000 aipply-crawler-api"
  },
  "keywords": ["aipply", "crawler", "api", "exa", "opportunities", "scholarships", "railway", "deployment"],
  "author": "AIpply Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Giulia3112/AIpply-AI-Agent-WEB-Crawler.git"
  },
  "homepage": "https://github.com/Giulia3112/AIpply-AI-Agent-WEB-Crawler#readme",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
